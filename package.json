{
  "name": "@statewalker/webrun-devtools",
  "description": "DevTools Extension for the StateWalker WebRun framework",
  "version": "0.1.2",
  "protocolVersion" : 0.1,
  "type": "module",
  "homepage": "https://github.com/statewalker/webrun-devtools",
  "author": {
    "name": "Mikhail Kotelnikov",
    "email": "mikhail.kotelnikov@gmail.com"
  },
  "license": "MIT",
  "module": "dist/webrun-devtools.js",
  "main": "dist/webrun-devtools.js",
  "scripts": {
    "prepublish": "yarn zip",
    "dev": "tsc && nodemon",
    "zip": "yarn build && cd ./dist/webrun-devtools-extension && zip -r ../webrun-devtools-extension.zip *",
    "build": "tsc && vite build --config ./vite.config.views.js && vite build --config ./vite.config.content.js && vite build --config ./vite.config.background.js && vite build --config ./vite.config.api-client.js && vite build --config ./vite.config.api-client-ws.js"
  },
  "files": [
    "dist/*.js",
    "dist/*.zip",
    "docs/**",
    "src/**",
    "examples/**",
    "README.md"
  ],
  "devDependencies": {
    "@statewalker/getset": "^0.2.4",
    "@statewalker/utils": "^0.4.2",
    "@statewalker/webrun-http": "^0.1.0",
    "@statewalker/webrun-ports": "^0.3.0",
    "idb-keyval": "^6.2.1",
    "nodemon": "^3.0.1",
    "open-props": "^1.6.12",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:statewalker/webrun-devtools.git"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "semver": "^7.5.4"
  }
}
