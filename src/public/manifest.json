{
  "manifest_version": 3,
  "name": "WebRun DevTools",
  "description": "WebRun DevTools is a testing and automation extension allowing to write scripts and pilot the browser directly from HTML pages or notebooks",
  "version": "0.0.6",
  "action": {
    "default_icon": "./bug.png",
    "default_popup": "./popup/index.html"
  },
  "icons": {
    "48":  "./bug.png"
  },
  "permissions": [
    "debugger", 
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "./background/index.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*/*", "https://*/", "http://*/*", "http://*/"],
      "js": ["./content/index.js"],
      "run_at": "document_start",
      "match_about_blank": true,
      "all_frames": true
    }
  ]
}
