{
  "manifest_version": 3,
  "name": "WebRun DevTools",
  "description": "Demonstrates the API by attaching a debugger to a webpage and capturing network data.",
  "version": "0.0.1",
  "action": {
    "default_icon": "./bug.png",
    "default_popup": "./popup/index.html"
  },
  "permissions": [
    "debugger", 
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "./background/index.js",
    "type": "module"
  }
}
